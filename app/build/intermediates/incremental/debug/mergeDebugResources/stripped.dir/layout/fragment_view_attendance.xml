<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motion_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"

    >


    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_close" />


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/attendance"
            android:textColor="@color/header_color"
            android:textSize="@dimen/_15sdp"
            app:fontFamily="@font/bold" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="2">


                <LinearLayout
                    android:id="@+id/llExpense"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button_white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_home_expense" />

                        <com.google.android.material.textview.MaterialTextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text="DA Amount"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_10sdp"
                            app:fontFamily="@font/bold" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtDAAmount"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_25sdp"
                            app:fontFamily="@font/bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text="@string/rs"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_14sdp"
                            app:fontFamily="@font/bold" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTaAmount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button_white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_home_visit" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtTodayVisitTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text="TA Amount"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_10sdp"
                            app:fontFamily="@font/bold" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtTAAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"

                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_25sdp"
                            app:fontFamily="@font/bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text="@string/rs"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_14sdp"
                            app:fontFamily="@font/bold" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button_white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_home_travel" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtTravelKMTravel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text="@string/kilometer_travelled"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_10sdp"
                            app:fontFamily="@font/bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtStartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_25sdp"
                            app:fontFamily="@font/bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text="@string/km"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_14sdp"
                            app:fontFamily="@font/bold" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button_white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"

                    android:paddingBottom="@dimen/_10sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_clock" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtWorkingDaysTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text="@string/total_hours"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_10sdp"
                            app:fontFamily="@font/bold" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txttotalhours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_25sdp"
                            app:fontFamily="@font/bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text="Hr"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_14sdp"
                            app:fontFamily="@font/bold" />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTimeTracking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button_white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_start_tracking" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtStartTracking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text="@string/start_tracking"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_10sdp"
                            app:fontFamily="@font/bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtTravelKM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_25sdp"
                            app:fontFamily="@font/bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text=""
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_14sdp"
                            app:fontFamily="@font/bold" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button_white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"

                    android:paddingBottom="@dimen/_10sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_stop_tracking" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtStopTracking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text="@string/stop_tracking"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_10sdp"
                            app:fontFamily="@font/bold" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtStopTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_16sdp"
                            app:fontFamily="@font/bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text=""
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_14sdp"
                            app:fontFamily="@font/bold" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/activity"
                android:textColor="@color/header_color"
                android:textSize="@dimen/_18sdp"
                app:fontFamily="@font/bold" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.6"
                android:text="Punch In - Punch Out"
                android:textColor="@color/header_color"
                android:textSize="@dimen/_12sdp"
                app:fontFamily="@font/poppins_semibold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rounded_button_white"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">


                <ImageView
                    android:id="@+id/ivPunchInPhoto"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_demo" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_5sdp">


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtPunchInTime"
                            android:layout_width="wrap_content"


                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="08:00 PM"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            app:fontFamily="@font/poppins_semibold" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/btnStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/rounded_button_status"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:text="Punch-In"

                            android:textAllCaps="false"
                            android:textColor="@color/black"


                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>


                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="0.6"
                        android:text="Address"
                        android:textColor="@color/header_color"
                        android:textSize="@dimen/_10sdp"
                        app:fontFamily="@font/poppins_semibold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txtPunchInAddress"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Address Comes Here"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        app:fontFamily="@font/poppins_semibold" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPunchOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rounded_button_white"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">


                <ImageView
                    android:id="@+id/ivPunchOutPhoto"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_demo" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_5sdp">


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtPunchOutTime"
                            android:layout_width="wrap_content"


                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="08:00 PM"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            app:fontFamily="@font/poppins_semibold" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/btnStatuss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/rounded_button_red"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_3sdp"
                            android:text="Punch-Out"

                            android:textAllCaps="false"
                            android:textColor="@color/black"


                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txtPunchOutAddress"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Address Comes Here"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        app:fontFamily="@font/poppins_semibold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="0.6"
                        android:text="Address"
                        android:textColor="@color/header_color"
                        android:textSize="@dimen/_10sdp"
                        app:fontFamily="@font/poppins_semibold" />


                </LinearLayout>


            </LinearLayout>


            <!--            <androidx.recyclerview.widget.RecyclerView-->


            <!--                android:id="@+id/rvAttendanceList"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="10dp"-->
            <!--                />-->

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>