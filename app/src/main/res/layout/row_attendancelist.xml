<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_button_white"
    android:padding="8dp"
    android:layout_marginTop="@dimen/_10sdp"
    android:gravity="center_vertical">

    <!-- Date Container -->
    <LinearLayout
        android:layout_width="@dimen/_50sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_month_view"

        android:gravity="center">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:fontFamily="@font/inter_bold"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtWeekDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon"
            android:fontFamily="@font/inter_bold"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Check-in & Check-out Information -->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llPunchIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_punch_in" />

            <LinearLayout
                android:layout_marginStart="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/punch_in"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/_12sdp"
                    android:alpha="0.6"
                    android:textColor="@color/black"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtPunchIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9:00 AM"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />


            </LinearLayout>




        </LinearLayout>


    </LinearLayout>

    <!-- Check-in & Check-out Information -->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llPunchInOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_punch_in" />

            <LinearLayout
                android:layout_marginStart="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/punch_out"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/_12sdp"
                    android:alpha="0.6"
                    android:textColor="@color/black"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtPunchOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05:00 PM"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />


            </LinearLayout>




        </LinearLayout>


    </LinearLayout>

    <LinearLayout

        android:id="@+id/llLeaveType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_punch_in" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_toEndOf="@+id/ivLogo"
                android:id="@+id/txtLeaveType"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/punch_in"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_12sdp"
                android:alpha="0.6"
                android:textColor="@color/black"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_alignParentEnd="true"


                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"




                android:id="@+id/btnStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textColor="@color/black"

                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_10sdp"

                android:background="@drawable/rounded_button_status"
                android:text="Applied" />



        </RelativeLayout>


    </LinearLayout>



</LinearLayout>
