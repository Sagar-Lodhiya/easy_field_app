<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_button_white"
    android:paddingTop="@dimen/_6sdp"
    android:paddingBottom="@dimen/_6sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:paddingStart="@dimen/_10sdp"

    android:layout_marginTop="@dimen/_10sdp"
    android:gravity="center_vertical">



    <!-- Check-in & Check-out Information -->
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:gravity="center_vertical">

        <LinearLayout

            android:layout_marginStart="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtLeaveType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Party Name"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_12sdp"
                android:alpha="0.6"
                android:textColor="@color/black"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtPartyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vishal Patel"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black" />



        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnStatus"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"


            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:background="@drawable/rounded_button_status"




            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="@color/text_color_light"

            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_10sdp"
            android:text="@string/approved" />


    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/view_line"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_toEndOf="@+id/ivLogo"
            android:id="@+id/txtDate"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28/02/2025"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_13sdp"

            android:textColor="@color/black"
            />





    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/ivLogos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_amount" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_toEndOf="@+id/ivLogos"
            android:id="@+id/txtAddress"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="Amount:"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_13sdp"

            android:textColor="@color/black"
            />

        <com.google.android.material.textview.MaterialTextView
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/txtAddress"
            android:id="@+id/txtAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 200"
            android:fontFamily="@font/inter_bold"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/ivLogoss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_block" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_toEndOf="@+id/ivLogoss"

            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:text="Remark"
            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_13sdp"

            android:textColor="@color/black"
            />









    </RelativeLayout>

    <LinearLayout

        android:background="@drawable/rounded_background"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/_20sdp"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:layout_marginStart="@dimen/_25sdp"
            android:id="@+id/txtExtra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"

            android:fontFamily="@font/poppins_medium"
            android:textSize="@dimen/_12sdp"
            android:alpha="0.6"

            android:textColor="@color/black"
            />


    </LinearLayout>


</LinearLayout>
