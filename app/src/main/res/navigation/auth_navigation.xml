<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/splashFragment">


    <fragment
        tools:layout="@layout/fragment_splash"
        android:id="@+id/splashFragment"
        android:name="com.easyfield.splash.fragments.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_helpFragment"
            app:destination="@id/helpFragment" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_login"
        android:id="@+id/loginFragment"
        android:name="com.easyfield.login.fragment.LoginFragment"
        android:label="LoginFragment" />
    <fragment
        tools:layout="@layout/activity_help"
        android:id="@+id/helpFragment"
        android:name="com.easyfield.dashboard.fragments.DashboardFragment"
        android:label="HelpFragment" >
        <action
            android:id="@+id/action_helpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>