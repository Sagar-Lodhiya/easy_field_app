<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motion_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp">

            <RelativeLayout
                android:id="@+id/rlTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp">


                <ImageView
                    android:id="@+id/ivNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_home_notification" />


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/home"
                    android:textColor="@color/header_color"
                    android:textSize="@dimen/_15sdp"
                    app:fontFamily="@font/bold" />


                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_profile_menu"
                    app:tint="@color/green" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtUserName"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/header_color"
                    android:textSize="@dimen/_18sdp"
                    app:fontFamily="@font/bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtUserName"

                    android:alpha="0.6"
                    android:textColor="@color/header_color"
                    android:textSize="@dimen/_12sdp"
                    app:fontFamily="@font/poppins_semibold" />


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivPhoto"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_alignParentEnd="true"
                    android:padding="5dp"
                    android:src="@drawable/profile"
                    app:shapeAppearance="@style/circleImageView"
                    app:strokeColor="@color/green"
                    app:strokeWidth="2dp" />


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/llPunchInOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button_white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_punch_in" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="@string/punch_in"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_12sdp"
                            app:fontFamily="@font/bold" />

                    </LinearLayout>

                    <com.google.android.material.textview.MaterialTextView

                        android:id="@+id/txtPunchIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:text="--:--"
                        android:textColor="@color/header_color"
                        android:textSize="@dimen/_20sdp"
                        app:fontFamily="@font/bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button_white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_punch_in" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:text="@string/punch_out"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_12sdp"
                            app:fontFamily="@font/bold" />

                    </LinearLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txtPunchOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:text="--:--"
                        android:textColor="@color/header_color"
                        android:textSize="@dimen/_20sdp"
                        app:fontFamily="@font/bold" />


                </LinearLayout>


            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPunchIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rounded_button_dashboard"
                android:fontFamily="@font/inter_bold"
                android:tag="1"
                android:text="@string/punch_out"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="@dimen/_12sdp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_button_border_green"
                android:fontFamily="@font/inter_bold"
                android:tag="1"
                android:text="@string/start_trip"
                android:textAllCaps="false"
                android:textColor="@color/green"
                android:textFontWeight="500"
                android:textSize="@dimen/_12sdp" />


            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/analytics"
                android:textColor="@color/header_color"
                android:textSize="@dimen/_18sdp"
                app:fontFamily="@font/bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="2">


                <LinearLayout
                    android:id="@+id/llExpense"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button_white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"

                    android:paddingBottom="@dimen/_10sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_home_expense" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtPendingExpenseTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text="@string/pending_expense"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_10sdp"
                            app:fontFamily="@font/bold" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtPendingExpense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"

                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_28sdp"
                            app:fontFamily="@font/bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text="@string/rs"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_14sdp"
                            app:fontFamily="@font/bold" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llVisit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button_white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_home_visit" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtTodayVisitTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text="@string/today_visit"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_10sdp"
                            app:fontFamily="@font/bold" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtTodayVisit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"

                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_28sdp"
                            app:fontFamily="@font/bold" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button_white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"

                    android:paddingBottom="@dimen/_10sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_home_travel" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtTravelKMTravel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text="@string/kilometer_travelled"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_10sdp"
                            app:fontFamily="@font/bold" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtTravelKM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"

                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_28sdp"
                            app:fontFamily="@font/bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text="@string/km"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_14sdp"
                            app:fontFamily="@font/bold" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button_white"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp"

                    android:paddingBottom="@dimen/_10sdp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_home_workingday" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtWorkingDaysTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text="@string/working_days"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_10sdp"
                            app:fontFamily="@font/bold" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/txtWorkingDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"

                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_28sdp"
                            app:fontFamily="@font/bold" />


                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:alpha="0.8"
                            android:text="@string/days"
                            android:textColor="@color/header_color"
                            android:textSize="@dimen/_14sdp"
                            app:fontFamily="@font/bold" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>