<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_below="@+id/rlMonthYear"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/rounded_button_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/ivPhoto"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/ic_demo"/>


        <LinearLayout
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:paddingBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtCategpryName"
                    android:layout_centerVertical="true"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exp--0001"
                    app:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_alignParentEnd="true"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"




                    android:id="@+id/btnStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:textColor="@color/black"

                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/_10sdp"


                    android:text="Applied" />

            </RelativeLayout>




            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:alpha="0.6"
                    app:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/header_color"
                    android:textSize="@dimen/_10sdp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtCity"

                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Day Grill"
                    android:alpha="0.6"
                    app:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/header_color"
                    android:textSize="@dimen/_10sdp"/>


            </LinearLayout>

            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:alpha="0.6"
                    app:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/header_color"
                    android:textSize="@dimen/_10sdp"/>

                <com.google.android.material.textview.MaterialTextView

                    android:id="@+id/txtDate"


                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="06/17/2025"
                    android:alpha="0.6"
                    app:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/header_color"
                    android:textSize="@dimen/_10sdp"/>


            </LinearLayout>

            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:alpha="0.6"
                    app:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/header_color"
                    android:textSize="@dimen/_10sdp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtAmount"


                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Rs 120"
                    android:alpha="0.6"
                    app:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/header_color"
                    android:textSize="@dimen/_10sdp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAcceptedAmount"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Accepted Amount"
                    android:alpha="0.6"
                    app:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/header_color"
                    android:textSize="@dimen/_10sdp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txtAcceptedAmount"



                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Rs 120"
                    android:alpha="0.6"
                    app:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/header_color"
                    android:textSize="@dimen/_10sdp"/>


            </LinearLayout>


        </LinearLayout>





    </LinearLayout>

</LinearLayout>